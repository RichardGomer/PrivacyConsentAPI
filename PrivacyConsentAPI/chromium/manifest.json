{
  "name": "Privacy Consent Tool",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Indicates your consent to privacy scenarios (such as cookies) to websites",
  "background": {"scripts": ["background.js"]},
 
  "content_scripts":
  	[
	  	{
	  		"matches": ["http://*/*", "https://*/*"],
	  		"js": ["lib/port.js", "content.js"]
	  	}
  	],
  	
  "browser_action":
   {
    	"default_icon": "icon_small.png",
    	"default_title": "Consent Preferences"
   },
 
  "permissions":
  	[
    	"tabs", "http://*/*", "https://*/*", "storage"
  	]
}